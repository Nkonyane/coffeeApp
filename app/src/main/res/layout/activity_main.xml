<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DEB887"
    tools:context="com.example.wendy.coffeeapp.MainActivity">


    <EditText
        android:id="@+id/capquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="24dp"
        android:layout_marginEnd="24dp"
        android:layout_above="@+id/espressoquantity"
        android:layout_toLeftOf="@+id/BTNTOTAL"
        android:visibility="invisible"
        android:layout_toStartOf="@+id/BTNTOTAL" />

    <EditText
        android:id="@+id/americanoquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/chkamericano"
        android:layout_alignLeft="@+id/macchiatoquantity"
        android:layout_alignStart="@+id/macchiatoquantity" />

    <EditText
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
        android:id="@+id/espressoquantity"
        android:visibility="invisible"
        android:layout_alignBottom="@+id/totalespresso"
        android:layout_alignLeft="@+id/capquantity"
        android:layout_alignStart="@+id/capquantity" />

    <EditText
        android:id="@+id/macchiatoquantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="invisible"
        android:layout_alignLeft="@+id/espressoquantity"
        android:layout_alignStart="@+id/espressoquantity"
        android:layout_below="@+id/txtespressoprice" />

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:src="@drawable/images_12"
        android:scaleType="centerCrop"
        android:layout_below="@+id/textView2"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:id="@+id/imageView" />

    <CheckBox
        android:id="@+id/chkcappuccino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="CAPPUCCINO"
        android:layout_marginLeft="7dp"
        android:layout_marginStart="7dp"
        android:layout_marginTop="31dp"
        android:layout_below="@+id/imageView"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <CheckBox
        android:id="@+id/chkespresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ESPRESSO"
        android:layout_below="@+id/chkcappuccino"
        android:layout_alignLeft="@+id/chkcappuccino"
        android:layout_alignStart="@+id/chkcappuccino"
        android:layout_marginTop="24dp" />

    <CheckBox
        android:id="@+id/chkmacchiato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MACCHIATO"

        android:layout_above="@+id/americanoquantity"
        android:layout_alignLeft="@+id/chkespresso"
        android:layout_alignStart="@+id/chkespresso" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:text="WENDY'S COFFEE APP"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <CheckBox
        android:id="@+id/chkamericano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMERICANO"
        android:layout_above="@+id/btncalculate"
        android:layout_alignRight="@+id/chkmacchiato"
        android:layout_alignEnd="@+id/chkmacchiato" />

    <Button
        android:id="@+id/btncalculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="AMOUNT DUE"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/txtcappuccinoprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"


        android:text="R46.00"
        android:layout_marginLeft="24dp"
        android:layout_marginStart="24dp"
        android:layout_alignBaseline="@+id/chkcappuccino"
        android:layout_alignBottom="@+id/chkcappuccino"
        android:layout_toRightOf="@+id/chkcappuccino"
        android:layout_toEndOf="@+id/chkcappuccino" />

    <TextView
        android:id="@+id/txtespressoprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="R60.00"
        android:layout_alignLeft="@+id/txtcappuccinoprice"
        android:layout_alignStart="@+id/txtcappuccinoprice"
        android:layout_alignTop="@+id/totalespresso" />

    <TextView
        android:id="@+id/txtmacchiatiprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="R53.00"
        android:layout_alignTop="@+id/chkmacchiato"
        android:layout_alignLeft="@+id/txtespressoprice"
        android:layout_alignStart="@+id/txtespressoprice" />

    <TextView
        android:id="@+id/txtamericanoprice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:text="R62.00"
        android:layout_alignBottom="@+id/chkamericano"
        android:layout_alignLeft="@+id/txtmacchiatiprice"
        android:layout_alignStart="@+id/txtmacchiatiprice" />

    <TextView
        android:id="@+id/txttotal"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:text="0"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:textStyle="bold"
        android:layout_alignBaseline="@+id/btncalculate"
        android:layout_alignBottom="@+id/btncalculate"
        android:layout_toRightOf="@+id/chkcappuccino"
        android:layout_alignRight="@+id/txtamericanoprice"
        android:layout_alignEnd="@+id/txtamericanoprice" />



    <TextView
        android:id="@+id/totalcappuccino"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_below="@+id/txtcappuccinoprice"
        android:layout_toRightOf="@+id/textView2"
        android:layout_toEndOf="@+id/textView2"
        android:layout_marginLeft="14dp"
        android:layout_marginStart="14dp" />

    <TextView
        android:id="@+id/totalespresso"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignBaseline="@+id/chkespresso"
        android:layout_alignBottom="@+id/chkespresso"
        android:layout_alignLeft="@+id/totalmacchiato"
        android:layout_alignStart="@+id/totalmacchiato" />

    <TextView
        android:id="@+id/totalmacchiato"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:layout_alignBaseline="@+id/txtmacchiatiprice"
        android:layout_alignBottom="@+id/txtmacchiatiprice"
        android:layout_alignLeft="@+id/totalcappuccino"
        android:layout_alignStart="@+id/totalcappuccino" />

    <TextView
        android:id="@+id/totalamericano"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtamericanoprice"
        android:layout_alignBottom="@+id/txtamericanoprice"
        android:layout_alignLeft="@+id/totalmacchiato"
        android:layout_alignStart="@+id/totalmacchiato"
        android:text="0" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/capquantity"
        android:layout_toEndOf="@+id/capquantity"
        android:layout_toRightOf="@+id/capquantity"
        android:text="TextView" />

    <Button
        android:id="@+id/BTNTOTAL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TOTAL"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>
